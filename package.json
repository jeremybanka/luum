{
  "name": "luum",
  "version": "0.0.12",
  "description": "generate colors dynamically",
  "main": "web/index.js",
  "types": "src/index.ts",
  "scripts": {
    "start": "node dist/index.js",
    "test": "jest --watch --no-coverage",
    "test:cov": "jest --watch",
    "test:once": "jest",
    "prelint": "ls-lint",
    "lint": "eslint \"{src,test}/**/*.ts{,x}\"",
    "lint!": "yarn lint -- --fix",
    "prebuild": "rm -rf dist",
    "build": "node esbuild.config.js"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/plugin-transform-typescript": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@banka/eslint-config": "^1.0.1",
    "@ls-lint/ls-lint": "^1.10.0",
    "@types/faker": "^5.5.8",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.1",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "babel-plugin-root-import": "^6.6.0",
    "esbuild": "^0.14.2",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^25.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "faker": "^5.5.3",
    "husky": "^7.0.4",
    "jest": "^27.2.5",
    "lint-staged": "^12.1.1",
    "prettier": "^2.4.1",
    "ts-node": "^10.2.1",
    "tsconfig-paths": "^3.11.0",
    "typescript": "~4.4.4"
  },
  "lint-staged": {
    "*.ts{,x}": "yarn lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jeremybanka/luum.git"
  },
  "keywords": [
    "color",
    "css",
    "javascript",
    "library"
  ],
  "eslintConfig": {
    "extends": [
      "@banka"
    ],
    "parserOptions": {
      "project": "tsconfig.base.json"
    }
  },
  "license": "MIT",
  "sideEffects": false,
  "author": "Jeremy Banka",
  "bugs": {
    "url": "https://github.com/jeremybanka/luum/issues"
  },
  "homepage": "https://github.com/jeremybanka/luum#readme"
}
